---
# tasks file for java
- name: Verify if jdk binary is present
  stat: path=/opt/jdk-{{ jdk_version }}-linux-x64.rpm
  register: jdk_binary
  tags: jdk


- name: Download Java jdk zip 
  get_url:
    url: "{{ artifactory_url }}/jdk-{{ jdk_version }}-linux-x64.tar.gz"
    dest: "/opt/jdk-{{ jdk_version }}-linux-x64.tar.gz"
  when: jdk_binary.stat.exists|bool == false
  tags: jdk

